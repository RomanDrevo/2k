{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "PUT/business schema",
  "type" : "object",
  "properties" : {
    "business_id" : { "type" : "integer" },
    "facebook_page_url" : {"type" : "string"},
    "name": {"type": "string"},
    "tags":{"type":"string","description":"comma delimited string of tags"},
    "add_tags":{"type":"string","description":"comma delimited list of tags - will be added to current campaign tags"},
    "remove_tags":{"type":"string","description":"comma delimited list of tags - will be deleted from current campaign tags"},
    "handle":{"type":"string"},
    "headline":{"type": "string"},
    "description":{"type": "string"},
    "website":{"type": "string"},
    "registered_domain":{"type": "string"},
    "contact_email":{"type": "string"},
    "contact_name":{"type": "string"},
    "contact_phone_number":{"type": "string"},
    "contact_user":{"type": "string"},
    "default_advertiser_language":{"type": "string"},
    "default_campaign_language":{"type": "string"},
    "twokey_am":{"type": "string"},
    "twokey_csm":{"type": "string"},
    "is_deleted":{"type": "boolean"},
    "profile_media_delete":{"type": "boolean"},
    "cover_media_delete":{"type":"boolean"},
    "profile_media_id": {"type":"integer"},
    "profile_x1": {"type":"integer","description":"upper left crop"},
    "profile_y1": {"type":"integer","description":"upper left crop"},
    "profile_x2": {"type":"integer","description":"lower right crop"},
    "profile_y2": {"type":"integer","description":"lower right crop"},
    "cover_media_id": {"type":"integer"},
    "cover_x1": {"type":"integer","description":"upper left crop"},
    "cover_y1": {"type":"integer","description":"upper left crop"},
    "cover_x2": {"type":"integer","description":"lower right crop"},
    "cover_y2": {"type":"integer","description":"lower right crop"},
    "location_city":{"type": "string"},
    "location_country":{"type": "string"},
    "location_lat":{"type": "number"},
    "location_long":{"type": "number"},
    "internal_business_name":{"type":"string"},
    "internal_country":{"type":"string"},
    "internal_email":{"type":"string"},
    "internal_full_address":{"type":"string"},
    "internal_phone_number":{"type":"string"}
  },
  "required": ["business_id"]
}